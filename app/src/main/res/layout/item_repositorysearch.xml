<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repositorysearch_item"
    android:layout_width="match_parent"
    android:paddingBottom="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/repositorysearch_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/repositorysearch_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/repositorysearch_item_description"
            android:layout_width="wrap_content"
            android:maxLines="3"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/repositorysearch_item_owner_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/repositorysearch_item_star"
        android:layout_gravity="center"
        android:src="@drawable/ic_star_border"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

</LinearLayout>